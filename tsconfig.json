{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["ES6", "DOM"],
    "types": ["node"], // This tells TypeScript to include Node.js types
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
